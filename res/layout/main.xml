<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:orientation="vertical"
             android:layout_width="fill_parent"
             android:layout_height="fill_parent">
    <WebView
            android:id="@+id/browser"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="#000000"/>


    <FrameLayout
            android:layout_height="wrap_content"
            android:layout_width="495dip"
            android:visibility="gone"
            android:id="@+id/clipManage">

        <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@color/black_mine">

                <LinearLayout
                        android:gravity="left"
                        android:layout_gravity="left"
                        android:layout_height="match_parent"
                        android:layout_width="1dip"
                        android:background="@color/gray_borders"
                        />

                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1">

                    <LinearLayout
                            android:gravity="top"
                            android:layout_gravity="top"
                            android:layout_height="1dip"
                            android:layout_width="match_parent"
                            android:background="@color/gray_borders"/>

                    <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:padding="10dip">

                        <TextView
                                android:textColor="@color/white_mine"
                                android:text="Show Selection"
                                android:background="@color/black_mine"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/showToast"/>
                    </LinearLayout>

                    <LinearLayout
                            android:gravity="bottom"
                            android:layout_gravity="bottom"
                            android:layout_height="1dip"
                            android:layout_width="match_parent"
                            android:background="@color/gray_borders"/>

                </LinearLayout>

                <LinearLayout
                        android:gravity="right"
                        android:layout_gravity="right"
                        android:layout_height="match_parent"
                        android:layout_width="1dip"
                        android:background="@color/gray_borders"/>

            </LinearLayout>


            <LinearLayout
                    android:paddingRight="25dip"
                    android:gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="-2dip">
                <ImageView
                        android:gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/carrot_black"
                        android:layout_gravity="center_horizontal"
                        android:id="@+id/carrotB"/>

            </LinearLayout>

        </LinearLayout>


    </FrameLayout>


</FrameLayout>

