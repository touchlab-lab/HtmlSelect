<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="fill_parent"
              android:layout_height="fill_parent">

    <LinearLayout

            android:id="@+id/bottomPanel"
            android:layout_alignParentTop="true"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@color/black_mine"
            android:orientation="vertical">

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black_mine"
                android:layout_weight="1">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="italic|bold"
                    android:textSize="17dip"
                    android:text="Created By:"
                    android:paddingTop="5dip"
                    android:paddingLeft="15dip"
                    android:textColor="#DAA520"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@color/black_mine"
                android:gravity="center_horizontal|center_vertical">

            <ImageView
                    android:id="@+id/touchlab"
                    android:layout_width="125dip"
                    android:layout_height="125dip"
                    android:src="@drawable/touchlab_logo"
                    android:scaleType="centerInside"
                    android:paddingRight="40dip"/>

            <ImageView
                    android:id="@+id/atavist"
                    android:layout_width="125dip"
                    android:layout_height="125dip"
                    android:src="@drawable/atavist_logo"
                    android:scaleType="centerInside"
                    android:paddingLeft="40dip"/>


        </LinearLayout>


    </LinearLayout>


    <FrameLayout

            android:layout_below="@id/bottomPanel"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/frameParent">

        <WebView
                android:id="@+id/browser"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="#000000"/>


        <FrameLayout
                android:layout_height="wrap_content"
                android:layout_width="495dip"
                android:visibility="gone"
                android:id="@+id/clipManage">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/black_mine">

                    <LinearLayout
                            android:gravity="left"
                            android:layout_gravity="left"
                            android:layout_height="match_parent"
                            android:layout_width="1dip"
                            android:background="@color/gray_borders"
                            />

                    <LinearLayout
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">

                        <LinearLayout
                                android:gravity="top"
                                android:layout_gravity="top"
                                android:layout_height="1dip"
                                android:layout_width="match_parent"
                                android:background="@color/gray_borders"/>

                        <LinearLayout
                                android:orientation="horizontal"
                                android:layout_width="fill_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:padding="10dip">

                            <TextView
                                    android:textColor="@color/white_mine"
                                    android:text="Show Selection"
                                    android:background="@color/black_mine"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:id="@+id/showToast"/>
                        </LinearLayout>

                        <LinearLayout
                                android:gravity="bottom"
                                android:layout_gravity="bottom"
                                android:layout_height="1dip"
                                android:layout_width="match_parent"
                                android:background="@color/gray_borders"/>

                    </LinearLayout>

                    <LinearLayout
                            android:gravity="right"
                            android:layout_gravity="right"
                            android:layout_height="match_parent"
                            android:layout_width="1dip"
                            android:background="@color/gray_borders"/>

                </LinearLayout>


                <LinearLayout
                        android:paddingRight="25dip"
                        android:gravity="center_horizontal"
                        android:orientation="horizontal"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="-2dip">
                    <ImageView
                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/carrot_black"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/carrotB"/>

                </LinearLayout>

            </LinearLayout>


        </FrameLayout>

    </FrameLayout>









</RelativeLayout>

